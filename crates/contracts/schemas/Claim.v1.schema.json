{
  "$id": "pecr.schemas.Claim.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["claim_id", "claim_text", "status", "evidence_unit_ids"],
  "properties": {
    "claim_id": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "claim_text": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["SUPPORTED", "ASSUMPTION", "UNKNOWN"] },
    "evidence_unit_ids": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
    }
  }
}
