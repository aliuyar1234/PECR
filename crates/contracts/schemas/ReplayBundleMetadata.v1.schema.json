{
  "$id": "pecr.schemas.ReplayBundleMetadata.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "trace_id",
    "request_id",
    "principal_id_hash",
    "engine_mode",
    "recorded_at_unix_ms",
    "terminal_mode",
    "quality_score",
    "bundle_hash"
  ],
  "properties": {
    "schema_version": { "type": "integer", "minimum": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "principal_id_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "engine_mode": { "$ref": "pecr.schemas.EngineMode.v1" },
    "recorded_at_unix_ms": { "type": "integer", "minimum": 0 },
    "terminal_mode": { "$ref": "pecr.schemas.TerminalMode.v1" },
    "quality_score": { "type": "number", "minimum": 0, "maximum": 100 },
    "bundle_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
